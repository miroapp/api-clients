{
  "name": "miro-api-clients",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "update-spec": "scripts/update-spec.ts",
    "postman:publish": "yarn workspace postman-collection-generator run generateCollection ",
    "build": "yarn workspace generator generate && yarn workspace @mirohq/miro-api build",
    "dev": "yarn workspace client-test-app dev",
    "pretest": "yarn build",
    "test": "yarn workspaces run test",
    "test:postman": "yarn workspace postman-collection-generator run test --watch",
    "coverage": "yarn workspace generator coverage && yarn workspace @mirohq/miro-api coverage",
    "format": "prettier -w ./packages",
    "prepare": "husky install"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "^3.3.2",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "openapi-to-postmanv2": "^4.18.0",
    "prettier": "^2.8.7",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@mirohq/prettier-config": "^2.0.0",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.202",
    "esbuild": "^0.19.9",
    "esbuild-jest": "^0.5.0",
    "husky": "^8.0.3"
  }
}
